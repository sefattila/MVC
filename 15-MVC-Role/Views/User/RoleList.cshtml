@using Microsoft.AspNetCore.Identity;
@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "RoleList";
}

<h1>RoleList</h1>

<table class="table">
    <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Update</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <th>@item.Name</th>
                <th><a asp-action="RoleUpdate" class="btn btn-warning" asp-route-id="@item.Id">Update</a></th>
                <th><a asp-action="RoleDelete" class="btn btn-danger" asp-route-id="@item.Id">Delete</a></th>
            </tr>
        }
    </tbody>
</table>
<a asp-action="RoleCreate" class="btn btn-success">Rol Ekle</a>


