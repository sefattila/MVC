@model _06_MVC_ViewModel_2.Models.VMs.CreateVMs

<h4>FootballPlayer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FootballPlayers.Id" class="control-label"></label>
                <input asp-for="FootballPlayers.Id" class="form-control" />
                <span asp-validation-for="FootballPlayers.Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FootballPlayers.Name" class="control-label"></label>
                <input asp-for="FootballPlayers.Name" class="form-control" />
                <span asp-validation-for="FootballPlayers.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FootballPlayers.Age" class="control-label"></label>
                <input asp-for="FootballPlayers.Age" class="form-control" />
                <span asp-validation-for="FootballPlayers.Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FootballPlayers.PositionId" class="control-label"></label>
                <select asp-for="FootballPlayers.PositionId" class="form-control">
                    <option>Select a Position</option>
                    @foreach (var item in Model.Positions)
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                </select>
                <span asp-validation-for="FootballPlayers.PositionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FootballPlayers.TeamId" class="control-label"></label>
                <select asp-for="FootballPlayers.TeamId" class="form-control">
                    <option>Select a Team</option>
                    @foreach (var item in Model.Teams)
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                </select>
                <span asp-validation-for="FootballPlayers.TeamId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
